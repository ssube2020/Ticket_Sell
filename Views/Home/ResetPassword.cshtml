




<form id="register-form" class="form" asp-controller="Home" asp-action="ResetPassword" method="post">

    <div class="form-group">
        <div class="input-group">
                <input id="email" name="newPassword" placeholder="new password" class="form-control"  type="password">
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
                <input id="email" name="confirm" placeholder="repeat password" class="form-control"  type="password">
        </div>
    </div>
                      
    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Change Password">
    <input type="hidden" name="PersonEmail" value="@ViewBag.persid"/>                      @*რაღაც სტრინგი მოაქვს და იმას ანიჭებს აქ ?????????? *@

    <h4 class="text-danger"> @TempData["PassErr"] </h4>

</form>

